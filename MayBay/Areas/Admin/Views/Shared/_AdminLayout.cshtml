<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>Trang Quản Lý</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #495057;
        }

        nav {
            background-color: #28a745;
            padding: 10px 0;
            border-bottom: 2px solid #dee2e6;
            color: white;
        }

        .navbar-toggler {
            background-color: #218838;
        }

        .navbar-nav {
            text-align: center;
        }

            .navbar-nav .nav-item {
                margin: 0 15px;
            }

            .navbar-nav .nav-link {
                color: gold;
                font-size: 16px;
                transition: color 0.3s ease-in-out;
            }

                .navbar-nav .nav-link:hover {
                    color: #ffc107;
                }

        .navbar-toggler-icon {
            color: #fff;
        }

        .container-fluid {
            margin: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm">
        <div class="container-fluid row">
            <div class="col-md-2"><img src="~/hinh/logo.png"></div>
            <!-- Links -->
            <button class="navbar-toggler btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center col-md-8" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","ChuyenBays")"><i class="bi bi-receipt-cutoff"></i> Quản lý Chuyến Bay</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","HangHangKhongs")"> <i class="bi bi-book"></i> Quản lý Hãng Bay</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","TuyenBays")"> <i class="bi bi-book"></i> Quản lý Tuyến Bay</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","QLDH")"><i class="bi bi-shop"></i> Quản lý đơn hàng</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-2">
                <span><a href="/User/LogOut" class="nav-link"><i class="bi bi-person-circle"></i> Đăng xuất <i class="bi bi-door-open-fill"></i></a></span>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>

</html>
