@using MayBay.Models
@inherits System.Web.Mvc.WebViewPage<List<ChuyenBay>>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="/lib/fontawesome/css/all.min.css" />
<script src="/lib/font-awesome/js/all.min.js"></script>

<style>
    body {
        font-family: 'Arial', sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    .list-title {
        text-align: center;
        background-color: #007bff;
        color: #fff;
        padding: 10px;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .table th,
    .table td {
        padding: 10px;
        border: 1px solid #ccc;
        text-align: left;
    }

    .hotel-image {
        width: 100px;
        height: 75px;
        object-fit: cover;
        margin-right: 10px;
    }

    .hotel-details {
        font-size: 16px;
        margin-bottom: 5px;
    }

    .action-links {
        font-size: 14px;
        display: flex;
        gap: 10px;
    }

    .action-links a {
        text-decoration: none;
        color: #007bff;
    }

    .action-links a:hover {
        text-decoration: underline;
    }
</style>

<div class="list-title">
    <h1>Danh Sách Chuyến Bay</h1>
</div>

<div style="text-align: right; margin-bottom: 10px;">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th>Chuyến Bay</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div>
                        <img src="/hinh/@item.HinhAnh" alt="@item.MayBay" class="hotel-image" />

                        <div class="hotel-details">
                            <label>Mã Chuyến Bay:</label> @Html.DisplayFor(modelItem => item.MaCB)
                        </div>
                        <div class="hotel-details">
                            <label>Mã Máy Bay:</label> @Html.DisplayFor(modelItem => item.MaMB)
                        </div>
                        <div class="hotel-details">
                            <label>Mã Tuyến Bay:</label> @Html.DisplayFor(modelItem => item.MaTBay)
                        </div>
                        <div class="hotel-details">
                            <label>Ngày Gio:</label> @Html.DisplayFor(modelItem => item.NgayGio)
                        </div>
                        <div class="hotel-details">
                            <label>Thời Gian Bay:</label> @Html.DisplayFor(modelItem => item.ThoiGianBay)
                        </div>
                    </div>
                </td>
                <td>
                    <div class="action-links">
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaCB })
                        |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaCB })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
