@model MayBay.Models.ChuyenBay
@using System.Web.Mvc

@{
    ViewBag.Title = "Thêm Chuyến Bay mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .form-container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    a {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        box-sizing: border-box;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: 1px solid #007bff;
    }

    .text-danger {
        color: #dc3545;
    }
</style>

<div class="form-container">
    <h2>Thêm Chuyến bay mới</h2>

    @using (Html.BeginForm("Create", "ChuyenBays", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <a>Mã Chuyến Bay:</a>
            @Html.EditorFor(model => model.MaCB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaCB, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <a>Mã Máy Bay:</a>
            @Html.EditorFor(model => model.MaMB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaMB, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <a>Mã Tuyến Bay:</a>
            @Html.EditorFor(model => model.MaTBay, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaTBay, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <a>Ngày Bay:</a>
            @Html.EditorFor(model => model.NgayGio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NgayGio, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <a>Thời Gian Bay:</a>
            @Html.EditorFor(model => model.ThoiGianBay, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ThoiGianBay, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <a>Hình ảnh minh họa:</a>
            <input type="file" name="ImageName" class="form-control" />
            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Thêm" class="btn btn-primary" />
        </div>
    }
</div>
