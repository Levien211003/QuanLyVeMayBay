@model MayBay.Models.HangHangKhong
@using System.Web.Mvc

@{
    ViewBag.Title = "Thêm Hãng Bay mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<h2>Thêm Hãng Bay mới</h2>

@using (Html.BeginForm("Create", "HangHangKhongs", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <a>Tên Hãng  Bay:</a>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenHH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenHH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a>Hình ảnh minh họa:</a>
        <input type="file" name="HinhAnh" class="form-control" required="required" data_val_required="Vui lòng chọn Hình ảnh minh họa" />
        @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <div class="col-md-offset-0 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-primary" />
        </div>
    </div>
}