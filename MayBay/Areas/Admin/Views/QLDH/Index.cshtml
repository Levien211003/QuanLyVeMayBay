@model List<MayBay.Models.BookingViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<h2>Danh sách các chuyến bay người dùng đã đặt</h2>

<div class="table-container">
    <table>
        <thead>
            <tr>


                <th>Mã Chuyến Bay</th>
                <th>Tên khách hàng</th>
                <th>Ngày Đặt</th>

                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.MaCB</td>
                    <td>@booking.customer_name</td>
             
                    
                    <td>@DateTime.Now.ToShortDateString()</td>
                

<td class="status-column">
                    @booking.trang_thai
                    @using (Html.BeginForm("UpdateStatus", "QLDH", new { bookingId = booking.booking_id }, FormMethod.Post))
                    {
                        @Html.Hidden("bookingId", booking.booking_id)
                        <button type="submit">Cập nhật</button>
                    }

                </td>
            </tr>
            } 
        </tbody>

    </table>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f8ff;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    h2 {
        color: #333;
        text-align: center;
    }

    .table-container {
        width: 100%;
        margin-top: 20px;
        display: flex;
        justify-content: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: white;
        border-radius: 8px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>