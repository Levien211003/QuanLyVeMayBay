@using MayBay.Models
@model List<Cart>

                     @{ ViewBag.Title = "HienThiGioHang"; Layout = "~/Views/Shared/_3.cshtml"; }

<head>
    <title>THÔNG TIN GIỎ HÀNG</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e0f2f1; /* Màu xanh da trời nhạt */
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .cart-item {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #fff;
        }

            .cart-item h4 {
                margin: 5px 0;
                font-size: 18px;
            }

            .cart-item img {
                width: 100%;
                max-height: 200px;
                object-fit: cover;
                margin-bottom: 10px;
            }

            .cart-item p {
                margin: 5px 0;
            }

            .cart-item strong {
                animation: blink 1s linear infinite;
            }

            .cart-item .btn {
                display: inline-block;
                padding: 10px 20px;
                font-size: 16px;
                text-align: center;
                text-decoration: none;
                background-color: #007bff;
                color: #fff;
                border-radius: 4px;
                margin-right: 10px;
            }

                .cart-item .btn:hover {
                    background-color: #0056b3;
                }

        .total {
            font-weight: bold;
            text-align: right;
            color: red;
            margin-top: 20px;
        }

        .checkout-btn {
            text-align: center;
            margin-top: 20px;
        }

            .checkout-btn .btn {
                background-color: #4caf50;
            }

                .checkout-btn .btn:hover {
                    background-color: #45a049;
                }
    </style>
</head>
<div class="container">
    <h2 class="text-center">THÔNG TIN GIỎ HÀNG</h2>
    <div>
        @foreach (var cart in Model)
        {
        <div class="cart-item">
            <img class="card-img-top hotel-picture" src="~/hinh/@cart.HinhAnh" alt=" Image 1">

            <h4>Mã CB: @cart.MaChuyenBay</h4>
            <p>Mã Hãng Bay: @cart.MaHangBay</p>
            <p>Mã Tuyến Bay: @cart.MaTuyenBay</p>
            <p>Số lượng: @cart.SoLuong</p>
            <p>Giá: @cart.Gia</p>





            <div>
                <a href="@Url.Action("Details", "KhachHang", new { id = cart.MaChuyenBay })" class="btn btn-success">Chi tiết</a>
                <a href="@Url.Action("XoaMatHang", "Cart", new { MaPhong = cart.MaChuyenBay })" class="btn btn-danger">Xóa </a>
            </div>
        </div>
        }
    </div>
</div>

<div class="container">
    <div class="total">
        <p>Tổng tiền: @ViewBag.TongTien</p>
    </div>


    <div class="checkout-btn">
        <a href="@Url.Action("DatHang", "Cart")" class="btn btn-primary">Đặt Hàng</a>
    </div>

    <div class="checkout-btn">
        <a href="@Url.Action("DSachCB", "KhachHang")" class="btn btn-primary">Đi đến đặt vé</a>
    </div>
</div></html>