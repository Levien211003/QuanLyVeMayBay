<html>
<head>
    <title>Danh sách chuyến bay</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const locationFilter = document.getElementById("locationFilter");
            const cbList = document.querySelectorAll(".room-card");

            locationFilter.addEventListener("change", updateFilters);

            function updateFilters() {
                const selectedLocation = locationFilter.value;

                cbList.forEach((cb) => {
                    const maTuyenBay = cb.querySelector(".card-text:nth-child(4)").textContent.trim().split(":")[1].trim();

                    const showCB = (selectedLocation === "0" || maTuyenBay === selectedLocation);

                    cb.style.display = showCB ? "block" : "none";
                });
            }

            updateFilters();
        });
    </script>
</head>
<body>
    <div class="container">
        <h1>Danh Sách Chuyến Bay</h1>

        <div style="text-align: center;">
            <label for="locationFilter">Lọc theo tuyến:</label>
            <select id="locationFilter">
                <option value="0">All</option>
                <option value="1">Sai Gon    Ha Noi</option>
                <option value="2">Cam Ranh   Ha Noi</option>
                <option value="3">Ha Noi	Sai Gon</option>
                <option value="4">Sai Gon	Cam Ranh</option>
                <option value="5">Phu Quoc	Da Nang</option>
                <option value="6">Cam Ranh	Vung Tau</option>
                <option value="7">Can Tho 	Dak Lak</option>
                <option value="8">Dien Bien	  Gia Lai</option>
                <option value="9">Phu Yen	Kien Giang</option>
            </select>
        </div>

        <div id="cbList">
            @foreach (var chuyenBay in Model)
            {
                var imageFileName = "r" + chuyenBay.MaCB;
                <a href="@Url.Action("Details", "KhachHang", new { id = chuyenBay.MaCB })">
                    <div class="room-card">
                        <img class="card-img-top hotel-picture" src="~/hinh/@chuyenBay.HinhAnh" alt=" Image 1">
                        <p class="card-text">Mã Chuyến Bay: @chuyenBay.MaCB</p>
                        <p class="card-text">Mã Máy Bay: @chuyenBay.MaMB</p>
                        <p class="card-text">Mã Tuyến Bay: @chuyenBay.MaTBay</p>
                        <p class="card-text">Ngày Giờ: @chuyenBay.NgayGio</p>
                        <a class="btn btn-primary" href="@Url.Action("AddTicketToCart", "Cart", new { MaCB = chuyenBay.MaCB })" onclick="redirectToCart()">
                            Đặt vé
                        </a>
                    </div>
                </a>
            }
        </div>

        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        <div class="MenuTrang">
            @Html.PagedListPager(Model, page => Url.Action("DSachCB", new { page }))
        </div>


    </div>
</body>
</html>

